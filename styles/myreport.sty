\newcommand{\AddCoverBorder}{
    \AddToShipoutPictureBG*{
        \begin{tikzpicture}[remember picture,overlay]
            \draw[line width=1pt,color=black]
                ($(current page.north west)+(0.5cm,-0.5cm)$) rectangle 
                ($(current page.south east)+(-0.5cm,0.5cm)$);
            \draw[line width=4pt,color=darkblue]
                ($(current page.north west)+(0.7cm,-0.7cm)$) rectangle 
                ($(current page.south east)+(-0.7cm,0.7cm)$);
        \end{tikzpicture}
    }
}

